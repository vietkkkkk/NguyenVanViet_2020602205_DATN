                <!-- customer login start -->
                <div class="customer_login">                       
                    @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "invalid_email")
                    {
                        <div class="alert alert-danger">Email invalid</div>
                    }
                    <div class="row" style="justify-content:center;">
                        <!--login area start-->
                        <div class="col-lg-6 col-md-6">
                            <div class="account_form">
                                <h2>login</h2>
                                <form action="@ViewBag.action" method="post">
                                    <p>
                                        <label>Username or email <span>*</span></label>
                                        <input type="text" name="Email">
                                    </p>
                                    <p>
                                        <label>Passwords <span>*</span></label>
                                        <input type="password" name="Password">
                                    </p>
                                    <div class="login_submit">
                                        <button type="submit" name="submit">login</button>
                                        <a href="#">Lost your password?</a>
                                    </div>

                                </form>
                                <div><a href="/Account/Register">Don't have account? Register now !</a></div>
                            </div>
                        </div>
                        <!--login area start-->
                       
                    </div>
                </div>
                <!-- customer login end -->

            </div>
