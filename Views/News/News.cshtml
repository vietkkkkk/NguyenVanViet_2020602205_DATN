<body>
    <!-- Add your site or application content here -->
    <!--pos page start-->
    <div class="pos_page">
        <div class="container">
            <!--pos page inner-->
            <div class="pos_page_inner">
                <!--header area -->
               @Html.Partial("~/Views/Shared/Header.cshtml")
                <!--header end -->
                <!--breadcrumbs area start-->
                <div class="breadcrumbs_area">
                    <div class="row">
                        <div class="col-12">
                            <div class="breadcrumb_content">
                                <ul>
                                    <li><a href="index.html">home</a></li>
                                    <li><i class="fa fa-angle-right"></i></li>
                                    <li>News</li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
                <!--breadcrumbs area end-->
                <!--blog area start-->
                <div class="blog_area">
                    <div class="row">
                        @foreach(var item in Model){
                        <div class="col-lg-4 col-md-6">
                            <div class="single_blog">
                                <div class="blog_thumb">
                                    <a href="blog-details.html"><img src="/Upload/News/@item.Photo" alt=""></a>
                                </div>
                                <div class="blog_content">
                                    <div class="blog_post">
                                        <ul>
                                            <li>
                                                <a href="#">@item.Content</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <h3><a href="blog-details.html">@item.Name</a></h3>
                                    <p>@item.Description</p>
                                    <div class="post_footer">
                                        <div class="post_meta">
                                            <ul>
                                                <li>Jun 20, 2018</li>
                                                <li>3 Comments</li>
                                            </ul>
                                        </div>
                                        <div class="Read_more">
                                            <a href="/News/Detail/@item.Id">Read more  <i class="fa fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
                <!--blog area end-->
                <!--pagination style start-->
                <div class="blog_pagination">
                    <div class="row">
                        <div class="col-12">
                            <div class="page_number">
                                <span>Pages: </span>
                                <ul>
                                    @for (int i = 1; i <= Model.PageCount; i++)
                                    {
                                        string str_current = (i == Model.PageNumber) ? "current" : "";
                                        <li><span class="page-number-item @str_current"><a href="/News/News?page=@i">@i</a></span></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--pagination style end-->
                <!--brand logo strat-->
